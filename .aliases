# Modern CLI aliases

# eza (ls replacement)
if command -v eza &> /dev/null; then
    alias ls='eza'
    alias ll='eza -l'
    alias la='eza -la'
    alias lt='eza --tree'
fi

# bat (cat replacement)
if command -v bat &> /dev/null; then
    alias cat='bat --paging=never'
    alias catp='bat'
elif command -v batcat &> /dev/null; then
    alias cat='batcat --paging=never'
    alias bat='batcat'
    alias catp='batcat'
fi
